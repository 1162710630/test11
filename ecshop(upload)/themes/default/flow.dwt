        <!-- {if $step eq "cart"} -->
        {insert_scripts files='showdiv.js'}
        <script type="text/javascript">
                {foreach from=$lang.password_js item=item key=key}
                  var {$key} = "{$item}";
                {/foreach}
        </script>
	<div id="page-content" class="single-page">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<ul class="breadcrumb">
						<!-- #BeginLibraryItem "/library/ur_here.lbi" --><!-- #EndLibraryItem -->
					</ul>
				</div>
			</div>
                    {insert_scripts files='showdiv.js'}
                    <h6><span>{$lang.goods_list}:</span></h6>
                    
			<div class="row">
				<div class="product well">
					<div class="col-md-3">
						<div class="image">
							<img src="images/galaxy-note.jpg" />
						</div>
					</div>
					<div class="col-md-9">
						<div class="caption">
							<div class="name"><h3><a href="product.html">{$lang.goods_name}{$goods.goods_name}</a></h3></div>
							<div class="info">
									<ul>
										<li><strong>{$lang.goods_brand}</strong><a href="{$goods.goods_brand_url}" >{$goods.goods_brand}</a></li>
										<li><strong>{$lang.goods_sn}</strong>{$goods.goods_sn}</li>
									</ul>
								</div>
                                                                <div class="price">
                                                                     <!-- {if $goods.promote_price neq "0"} -->
                                                                               ￥{$goods.shop_price} <span>{$goods.promote_price}</span>
                                                                                <!-- {else}-->
                                                                               {$goods.promote_price}
                                                                                <!--{/if}-->
                                                                </div>
							<label>Qty: </label>
                                                        <!-- {if $goods.goods_id gt 0 && $goods.is_gift eq 0 && $goods.parent_id eq 0} 普通商品可修改数量 -->
                                                        <input class="form-inline quantity" type="text" name="goods_number[{$goods.rec_id}]" id="goods_number_{$goods.rec_id}" value="{$goods.goods_number}" size="4" style="text-align:center " onkeydown="showdiv(this)"><a href="#" class="btn btn-2 ">Update</a>
							<!-- {else} -->
                                                        {$goods.goods_number}
                                                        <!-- {/if} -->
							<hr>
                                                        
							<a href="../flow.php?step=drop_goods" class="btn btn-default pull-right">REMOVE</a>
						</div>
					</div>
					<div class="clear"></div>
				</div>	
			</div>
    
			<div class="row">
				<div class="product well">
					<div class="col-md-3">
						<div class="image">
							<img src="images/Z1.png" />
						</div>
					</div>
					<div class="col-md-9">
						<div class="caption">
							<div class="name"><h3><a href="product.html">{$lang.goods_name}{$goods.goods_name}</a></h3></div>
							<div class="info">
									<ul>
										<li><strong>{$lang.goods_brand}</strong><a href="{$goods.goods_brand_url}" >{$goods.goods_brand}</a></li>
										<li><strong>{$lang.goods_sn}</strong>{$goods.goods_sn}</li>
									</ul>
								</div>
                                                                <div class="price">
                                                                     <!-- {if $goods.promote_price neq "0"} -->
                                                                               ￥{$goods.shop_price} <span>{$goods.promote_price}</span>
                                                                                <!-- {else}-->
                                                                               {$goods.promote_price}
                                                                                <!--{/if}-->
