							<label>Qty: </label>
                                                         <!-- {if $goods.goods_id gt 0 && $goods.is_gift eq 0 && $goods.parent_id eq 0} 普通商品可修改数量 -->
                                                        <input class="form-inline quantity" type="text" name="goods_number[{$goods.rec_id}]" id="goods_number_{$goods.rec_id}" value="{$goods.goods_number}" size="4" style="text-align:center " onkeydown="showdiv(this)"><a href="#" class="btn btn-2 ">Update</a>
							<!-- {else} -->
                                                        {$goods.goods_number}
                                                        <!-- {/if} -->
                                                        <hr>
							<a href="#" class="btn btn-default pull-right">REMOVE</a>
