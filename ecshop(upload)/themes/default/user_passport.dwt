<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="Keywords" content="{$keywords}" />
    <meta name="Description" content="{$description}" />
    <meta name="author" content="">
	
    <title>{$page_title}</title>
	
    <!-- Bootstrap Core CSS -->
    <link rel="stylesheet" href="themes/default/css/bootstrap.min.css"  type="text/css">
	
	<!-- Custom CSS -->
    <link rel="stylesheet" href="themes/default/css/style.css">
	
	
	<!-- Custom Fonts -->
    <link rel="stylesheet" href="themes/default/font-awesome/css/font-awesome.min.css"  type="text/css">
    <link rel="stylesheet" href="themes/default/fonts/font-slider.css" type="text/css">
	
	<!-- jQuery and Modernizr-->
	<script src="themes/default/js/jquery-2.1.1.js"></script>
	
	<!-- Core JavaScript Files -->  	 
    <script src="themes/default/js/bootstrap.min.js"></script>
	
	<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="themes/default/js/html5shiv.js"></script>
        <script src="themes/default/js/respond.min.js"></script>
    <![endif]-->
    {insert_scripts files='common.js,user.js'}
</head>

<body>
	<!-- #BeginLibraryItem "/library/page_header.lbi" --><!-- #EndLibraryItem -->
	<!--//////////////////////////////////////////////////-->
	<!--///////////////////Account Page///////////////////-->
	<!--//////////////////////////////////////////////////-->
	<div id="page-content" class="single-page">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<ul class="breadcrumb">
						<!-- #BeginLibraryItem "/library/ur_here.lbi" --><!-- #EndLibraryItem -->
                                                
					</ul>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="heading"><h2>Login</h2></div>
					<form name="form1" id="ff1" method="post" action="user.php">
						<div class="form-group">
							<input type="text" class="form-control" placeholder="{$lang.label_username}:" name="username" id="username" required>
						</div>
						<div class="form-group">
							<input type="password" class="form-control" placeholder="{$lang.label_password} :" name="password" id="email" required>
						</div>
                                            <input type="hidden" name="act" value="act_login" />
                                            <input type="hidden" name="back_act" value="{$back_act}" /> 
						<button name="submit" type="submit" class="btn btn-1" name="login" id="login">登 录</button>
						<td><a href="user.php?act=qpassword_name" class="f3">{$lang.get_password_by_question}</a>&nbsp;&nbsp;&nbsp;<a href="user.php?act=get_password" class="f3">{$lang.get_password_by_mail}</a></td>
                                                
					</form>
				</div>
				<div class="col-md-6">
                                    {insert_scripts files='utils.js'}
					<div class="heading"><h2>注册新用户</h2></div>
					<form name="formUser" id="ff2" method="post" action="user.php" onsubmit="return register();">
						<div class="form-group">
							<input type="text" class="form-control"  onblur="is_registered(this.value);"  placeholder="{$lang.label_username} :" name="username" id="firstname" required>
						        <span id="username_notice" style="color:#FF0000"> *</span>
                                                </div>
					
						<div class="form-group">
							<input type="tel" class="form-control" onblur="checkEmail(this.value);"  placeholder="{$lang.label_email} :" name="email" id="email" required>
						        <span id="email_notice" style="color:#FF0000"> *</span>
                                                </div>
						<div class="form-group">
							<input type="tel" class="form-control" placeholder="请输入手机号 :" name="userphone" id="phone" required>
						</div>
						<div class="form-group">
							<input name="gender" id="gender" type="radio"> Male(男) <input name="gender" id="gender" type="radio"> Female(女) 
						</div>
						<div class="form-group">
							<input type="password" class="form-control" placeholder="{$lang.label_password} :" onblur="check_password(this.value);" onkeyup="checkIntensity(this.value)"   name="password" id="password" required>
						        <span style="color:#FF0000" id="password_notice"> *</span>
                                                        <span  id="pwd_lower">{$lang.pwd_lower}</span>
                                                        <span  id="pwd_middle">{$lang.pwd_middle}</span>
                                                        <span  id="pwd_high">{$lang.pwd_high}</span>
                                                </div>
						<div class="form-group">
							<input type="password" class="form-control" placeholder="{$lang.label_confirm_password} :" onblur="check_conform_password(this.value);" name="confirm_password" id="repassword" required>
						        <span style="color:#FF0000" id="conform_password_notice"> *</span>
                                                </div>
						<div class="form-group">
							<input name="agreement" type="checkbox" value="1" checked="checked" />{$lang.agreement}
						</div>
                                            
                                                        <input name="act" type="hidden" value="act_register" >
                                                       <input type="hidden" name="back_act" value="{$back_act}" />
                                                       
                                                       <button name="submit" type="submit" class="btn btn-1">立即注册</button>
                                                       
					</form>
				</div>
			</div>
		</div>
	</div>
	<!-- #BeginLibraryItem "/library/page_footer.lbi" --><!-- #EndLibraryItem -->
</body>
<script type="text/javascript">
var process_request = "{$lang.process_request}";
{foreach from=$lang.passport_js item=item key=key}
var {$key} = "{$item}";
{/foreach}
var username_exist = "{$lang.username_exist}";
</script>
</html>